function network_aachen_menu() {
    $items = array();
    $items['network/aachen'] = array(
        'page callback' => 'network_aachen_page',
        'access callback' => TRUE,
        'type' => MENU_NORMAL_ITEM,
        'file' => 'network_aachen_page.inc'

    );
    return $items;
}

